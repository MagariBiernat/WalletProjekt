<Window x:Class="WalletProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:WalletProjekt"
        xmlns:views="clr-namespace:WalletProjekt.Views"
        xmlns:viewmodels="clr-namespace:WalletProjekt.ViewModels"
        mc:Ignorable="d"
        Title="MyWallet" Height="700" Width="1250" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Cursor="Arrow" Background="#FFCCD7FF"
        FontFamily="Microsoft Sans Serif">

    <Window.Resources>
        <!--Data Templates in here.-->
        <DataTemplate x:Name="RegisterTemplate" DataType="{x:Type viewmodels:RegisterModel}">
            <views:Register DataContext="{Binding LoginRegisterView}"/>
        </DataTemplate>
        <DataTemplate x:Name="LoginTemplate" DataType="{x:Type viewmodels:LoginModel}">
            <views:Login DataContext="{Binding LoginRegisterView}"/>
        </DataTemplate>


    </Window.Resources>

    <!-- A first window containing login panel / registration panel-->

    <Grid Background="#B1FFFFFF" OpacityMask="#FF2D49FB">

        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <!--A header panel at the top, contains title and minimalize button, shutdown button.-->
        <Grid x:Name="Login_Header_App" Grid.Row="0" Width="1250" Height="50" MouseDown="Login_Header_App_MouseDown">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FF221ACD" Offset="0.173"/>
                    <GradientStop Color="#FF3E3EEE" Offset="0.916"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.Effect>
                <DropShadowEffect/>
            </Grid.Effect>

            <!-- A horizontal stackpanel that contains minimalize, shutdown buttons.-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="50">

                <!--Minimalize app button-->
                <Button x:Name="MinimalizeButton" Click="MinimalizeButton_Click" Height="50" Width="50" Background="Transparent" BorderBrush="{x:Null}" Foreground="White" Margin="0,0,0,0">
                    <materialDesign:PackIcon Kind="HorizontalLine" Height="35" Width="30"/>
                </Button>

                <!-- Button shutting the app off-->
                <Button x:Name="ButtonPower" Width="60"    
                       Height="50" Background="Transparent" BorderBrush="{x:Null}" Foreground="White" Click="ButtonPower_Click" Margin="0,0,0,0">
                    <materialDesign:PackIcon Kind="Power" Height="35" Width="30"/>
                </Button>
            </StackPanel>

        </Grid>



        <Grid x:Name="ContextView" Grid.Row="1" VerticalAlignment="Center" Background="#FFFBFBFB" Height="650">
            <Border
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderThickness="2"
                CornerRadius="15"
                BorderBrush="#FFFFFFFF"
                Padding="2"
                Background="White"
                >
                <Border.Effect>
                    <DropShadowEffect Color="#FF1F2CB4" Direction="344" Opacity="0.35" RenderingBias="Quality" ShadowDepth="8"/>
                </Border.Effect>
                <Grid x:Name="CenterView" HorizontalAlignment="Center" Width="350" Height="450" Background="Transparent" >
                    <ContentControl x:Name="LoginRegisterView" Content="{Binding}" />
                </Grid>


            </Border>


        </Grid>
    </Grid>
</Window>
