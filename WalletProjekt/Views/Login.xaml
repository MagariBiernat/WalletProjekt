<UserControl x:Class="WalletProjekt.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WalletProjekt.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="350">
    <Grid Background="Transparent">
        <StackPanel>
            <Grid Height="80" Width="150" HorizontalAlignment="Center">
                <!--<Grid.Background>
                   <ImageBrush ImageSource="Images/logo.png"/>
                </Grid.Background>-->

            </Grid>
            <TextBlock Text="E-mail" />
            <TextBox />
            <TextBlock Text="Password" />
            <PasswordBox />
            <Button x:Name="LoginButton" Margin="0 0 0 20" Content="Login"/>
            <!-- jakas przerwa?-->
            <TextBlock Text="Do not have an account yet?"/>
            <Button x:Name="RegisterNewAccountButton" Content="Sign Up"/>

        </StackPanel>
    </Grid>
</UserControl>
