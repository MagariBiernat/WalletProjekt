<UserControl x:Class="WalletProjekt.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WalletProjekt.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="350" Foreground="Black" >
    <Grid Background="white">
        <Grid Height="300" Width="300" Margin="26,31,24,69">
            <StackPanel>

                <TextBlock FontSize="28" FontWeight="Bold" Text="Login">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="10"
                              Opacity=".4"
                              ShadowDepth="2" />
                    </TextBlock.Effect>
                </TextBlock>

                <TextBox materialDesign:HintAssist.Hint="E-mail" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0 5"/>

                <PasswordBox materialDesign:HintAssist.Hint="Password" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" Margin="0 5"/>

                <Button x:Name="LoginButton" Margin="0 30 0 5" Content="Login" Click="LoginButton_Click"/>

                <TextBlock FontSize="13" Margin="0 0 0 5" TextAlignment="Center" Text="Do not have an account yet?"/>

                <Button x:Name="RegisterNewAccountButton" Content="Sign Up" Click="RegisterNewAccountButton_Click"/>

            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
