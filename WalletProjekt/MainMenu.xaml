<Page x:Class="WalletProjekt.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:WalletProjekt"
        xmlns:views="clr-namespace:WalletProjekt.Views"
        xmlns:viewmodels="clr-namespace:WalletProjekt.ViewModels"
        mc:Ignorable="d" Height="700" Width="400" Cursor="Arrow" 
        FontFamily="Microsoft Sans Serif">

    <Page.Resources>
        <DataTemplate x:Name="DashboardTemplate" DataType="{x:Type viewmodels:DashboardModel}">
            <views:Dashboard DataContext="{Binding LoginRegisterView}"/>
        </DataTemplate>
    </Page.Resources>
    <!--Main Menu here--> 
    <Grid x:Name="ContextView" >
        <Grid.Background>
            <ImageBrush ImageSource="/Images/bgproo.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Grid x:Name="MenuBar" Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                
                <Button Background="BlueViolet" Content="Dashboard"/>
                
                <Button Background="BlueViolet" Content="Posts"/>
                
                <Button Background="BlueViolet" Content="Statistics"/>
                
                <Button Background="BlueViolet" Content="Profile"/>
                
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <ContentControl x:Name="MainContent" Content="{Binding}" />
        </Grid>
    </Grid>
</Page>
