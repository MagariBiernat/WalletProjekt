<Page x:Class="WalletProjekt.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:WalletProjekt"
        xmlns:views="clr-namespace:WalletProjekt.Views"
        xmlns:viewmodels="clr-namespace:WalletProjekt.ViewModels"
        mc:Ignorable="d" Height="660" Width="1250" Cursor="Arrow" Background="#FFCCD7FF"
        FontFamily="Microsoft Sans Serif">

    <!--Main Menu here--> 
    <Grid x:Name="ContextView" Background="#FF924DAC">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid x:Name="MenuBar" Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Button Background="BlueViolet" Content="Dashboard">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="BorderThickness" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Background="BlueViolet" Content="Posts"/>
                <Button Background="BlueViolet" Content="Statistics"/>
                <Button Background="BlueViolet" Content="Profile"/>
                
            </StackPanel>
        </Grid>
    </Grid>
</Page>
